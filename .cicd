---

# Generic
role: ansible-role-powershell_linux
role_short: powershell_linux
role_description: |
  Install & configures Powershell on Linux

# Supported platform
platforms:
  - name: CentOS 7
    image: centos7
  - name: CentOS 8
    image: centos8
  - name: Debian 10 (Buster)
    image: debian10
  - name: Debian 11 (Bullseye)
    image: debian11
  - name: Ubuntu 18.04 LTS
    image: ubuntu1804
  - name: Ubuntu 20.04 LTS
    image: ubuntu2014

# Ansible galaxy
galaxy:
  role_name: powershell_linux
  namespace: de_it_krachten
  description: powershell_linux
  author: Mark van Huijstee
  company: De IT Krachten BV
  license: MIT
  min_ansible_version: 2.9
  platforms:
    - name: EL
      versions:
        - 7
        - 8
    - name: Debian
      versions:
        - buster
        - bullseye
    - name: Ubuntu
      versions:
        - 18.04
        - 20.04

# Github
github:
  active: true
  owner: de-it-krachten
  repo: ansible-role-powershell_linux

# Gitlab
gitlab:
  active: false

# molecule
molecule:
  active: true
  platforms:
    - centos7
    - centos8
    - debian10
    - debian11
    - ubuntu1804
    - ubuntu2004
